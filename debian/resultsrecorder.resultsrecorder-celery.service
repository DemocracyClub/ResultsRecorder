[Unit]
Description=resultsrecorder-celery
After=network.target

[Install]
WantedBy=multi-user.target

[Service]
User=www-data
Group=www-data
Restart=always

PermissionsStartOnly=true
ExecStartPre=-/usr/bin/install -o www-data -g www-data -d /var/lib/resultsrecorder-celery

ExecStart=/usr/share/python/resultsrecorder/bin/manage.py celery worker --beat --schedule=/var/lib/resultsrecorder-celery/schedule --loglevel=info --concurrency=1

PrivateTmp=true
