[Unit]
Description=resultsrecorder-gunicorn
After=network.target

[Install]
WantedBy=multi-user.target

[Service]
User=www-data
Group=www-data
Restart=always

ExecStart=/usr/share/python/resultsrecorder/bin/gunicorn --workers=2 --max-requests=500 --log-level=info --preload resultsrecorder.wsgi
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID

PrivateTmp=true
